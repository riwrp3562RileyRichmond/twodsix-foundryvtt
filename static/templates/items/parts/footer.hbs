<div class="effects-footer">
  {{#if item.effects.size}}
  <button type="button" class="edit-active-effect" data-action="editActiveEffect"><i class="fas fa-edit"></i> {{localize "TWODSIX.Items.Traits.EditEffect"}}</button>
  <button type="button" class="delete-active-effect" data-action="deleteActiveEffect"><i class="fas fa-trash"></i> {{localize "TWODSIX.Items.Traits.DeleteEffect"}}</button>
  {{else}}
  <button type="button" class="create-active-effect" data-action="createActiveEffect"><i class="fas fa-plus"></i> {{localize "TWODSIX.Items.Traits.CreateEffect"}}</button>
  {{/if}}
</div>
